-- Get references to the UI elements
local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = playerGui

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 200, 0, 150)
frame.Position = UDim2.new(0.5, -100, 0.5, -75)
frame.BackgroundColor3 = Color3.new(0.5, 0.5, 0.5)
frame.Parent = screenGui

local button = Instance.new("TextButton")
button.Size = UDim2.new(0, 150, 0, 50)
button.Position = UDim2.new(0.5, -75, 0.75, -25)
button.BackgroundColor3 = Color3.new(0, 0.5, 0.5)
button.Text = "Click me!"
button.Parent = frame

local label = Instance.new("TextLabel")
label.Size = UDim2.new(1, 0, 0.25, 0)
label.Position = UDim2.new(0, 0, 0, 0)
label.BackgroundColor3 = Color3.new(1, 1, 1)
label.Text = "Hello, Roblox!"
label.TextSize = 20
label.Parent = frame

-- Function to update the label text
local function updateLabelText()
    label.Text = "Button clicked!"
end

-- Connect the function to the button's MouseButton1Click event
button.MouseButton1Click:Connect(updateLabelText)
